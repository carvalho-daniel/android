<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="18dp"
    android:layout_margin="10dp"
    >

    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />

    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:layout_toRightOf="@+id/img"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/nome"
        android:layout_toRightOf="@+id/img"
        android:gravity="right"
        android:text="Valor"
        />

    <TextView
        android:id="@+id/ingredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valor"
        android:text="Mussarela, calabresa, azeitona, ovo, sei la"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/mais"
        android:layout_toRightOf="@+id/img"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="10dp"
        android:textColor="#777777"
        />
<!--    <Button-->
<!--        android:id="@+id/solicitar"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="50dp"-->
<!--        android:text="Solicitar"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:textSize="12dp"-->
<!--        />-->

    <Button
        android:id="@+id/mais"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"
        android:layout_toLeftOf="@+id/quantidade"
        android:layout_marginRight="5dp"
        android:padding="0dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toLeftOf="@id/menos"
        android:layout_marginTop="2dp"
        android:padding="8dp"
        android:layout_centerVertical="true"
        />

    <Button
        android:id="@+id/menos"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="-"
        android:layout_alignParentEnd="true"
        android:padding="0dp"
        android:layout_centerVertical="true"
        />

</RelativeLayout>