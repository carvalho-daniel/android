<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="28dp"
    >

    <ImageView
        android:id="@+id/imgFoguete"
        android:layout_width="130dp"
        android:layout_height="130dp"
        />

    <TextView
        android:id="@+id/rocket_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rocket: Falcon 1"
        android:layout_toRightOf="@+id/imgFoguete"
        />

    <TextView
        android:id="@+id/launch_date"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Date 06/11/2024"
        android:layout_below="@+id/launch_success"
        />

    <TextView
        android:id="@+id/launch_success"
        android:layout_below="@+id/rocket_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch success: succeed"
        android:layout_toRightOf="@+id/imgFoguete"
        />

    <TextView
        android:id="@+id/payload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payload Satellite"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/launch_date"
        />

</RelativeLayout>
